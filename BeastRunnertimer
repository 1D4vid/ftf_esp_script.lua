hint.Position = UDim2.new(0.5, 0, 1, -18)
hint.BackgroundColor3 = Color3.fromRGB(28,30,34)
hint.BorderSizePixel = 0
hint.Parent = screenGui
makeCorner(hint, 8)
hint.ZIndex = 100
hint.BackgroundTransparency = 1

