toggleBtn.Size = UDim2.new(0.3, 0, 0.72, 0)
toggleBtn.Position = UDim2.new(0.7, 0, 0.14, 0)
toggleBtn.BackgroundColor3 = Color3.fromRGB(180, 0, 0)
toggleBtn.BorderSizePixel = 0
toggleBtn.Font = Enum.Font.SourceSansBold
