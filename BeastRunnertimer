menu.Position = UDim2.new(0.5, 0, 0.45, 0)
menu.BackgroundColor3 = Color3.fromRGB(18,18,20)
menu.BorderSizePixel = 0
menu.Parent = screenGui
makeCorner(menu, 12)
menu.ZIndex = 110
menu.Visible = false

