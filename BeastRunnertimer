-- RunnerCooldownBottomRight.local.lua
-- LocalScript -> colocar em StarterPlayerScripts
-- O que faz:
--  - Menu minimalista (L) com toggle "Contador de tempo (runner)"
--  - Labels grandes e visíveis acima da cabeça dos outros jogadores (AlwaysOnTop, MaxDistance alto)
--  - Indicador de cooldown do BeastPower no canto inferior direito (sem fundo, apenas texto)
--  - Atualização reativa (NumberValue.Changed) e limpeza ao terminar partida / desativar
--  - Esconde automaticamente quando a partida termina (se detectado BoolValue comum de estado de partida)

local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")
local ReplicatedStorage = game:GetService("ReplicatedStorage")

local LocalPlayer = Players.LocalPlayer
local PlayerGui = LocalPlayer:WaitForChild("PlayerGui")

-- Root ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "RunnerCooldownBR_GUI"
screenGui.ResetOnSpawn = false
screenGui.DisplayOrder = 3000
screenGui.IgnoreGuiInset = true
screenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
screenGui.Parent = PlayerGui

-- Helpers
local function tween(inst, props, info)
    info = info or TweenInfo.new(0.14, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
    TweenService:Create(inst, info, props):Play()
end

local function makeCorner(parent, radius)
    local c = Instance.new("UICorner")
    c.CornerRadius = UDim.new(0, radius or 8)
    c.Parent = parent
    return c
end

local function makeStroke(parent, thickness, transparency)
    local s = Instance.new("UIStroke")
    s.Thickness = thickness or 1
    s.Transparency = (transparency ~= nil) and transparency or 0.45
    s.Color = Color3.fromRGB(0,0,0)
    s.Parent = parent
    return s
end

local function percentText(v)
    return tostring(math.floor(v * 100 + 0.5)) .. "%"
end

local function formatSeconds(n)
    if not n then return "0s" end
    if n >= 10 then
        return tostring(math.floor(n + 0.5)) .. "s"
    else
        return string.format("%.1fs", math.max(0, n))
    end
end

